  <div class="main-content d-flex w-100 h-auto">
    <%- include("./partials/studentAside.ejs")%>
    <div class="row allCOntent" style="width: 80% !important;">
      <div class="col-12 aside-right px-4 py-4 bg-white" style="width: 100% !important;">
        <div class="manange-bar px-4 py-4 bg-white w-100">
          <div class="d-flex">
            <div class="d-flex w-75" style="align-items: center; grid-template-columns: 0.5fr 1.5fr;">
              <p class="fw-normal w-auto fs-6 lesson-bar" style="margin-left: 0.5em !important;">บทเรียน:
                <span class="fw-normal fs-6 text-primary"><%=lesson.LessonName%></span>
                วิชา:
                <span class="fw-normal fs-6 text-primary">
                  <%=lesson.subject.subjectId%>
                  <%=lesson.subject.subjectMongooseId.subjectName%>
                </span>
                ภาคการศึกษา:
                <span class="fw-normal fs-6 text-primary">
                  <%=lesson.subject.subjectMongooseId.semester%>
                </span>
                กลุ่ม:
                <span class="fw-normal fs-6 text-primary">
                  <%=lesson.subject.subjectMongooseId.section%>
                </span>
              </p>
            </div>
            <div class="d-flex w-25 justify-content-end" style="align-items: center; margin-top: 0.5 !important;">
            </div>
          </div>
        </div>
        <div class="hide-layout-2">
          <% if (paginatedLayouts.length > 0) { %>
          <% paginatedLayouts.forEach(Layout => {%>
          <% if (Layout.name === "Layout01") {%>
          <p class="layout01-mainDes mx-3 my-3"><%= Layout.Topic%></p>
          <p class="text-areas-indent mx-3 fs-5" style="width: 90%;"><%= Layout.MainDescription%></p>
          <!-- <input class="input-mainSubDes form-control mx-5 p-3 w-75 h-auto" name="LessonNumber" placeholder="กรอกข้อความส่วนอธิบายเนื้อหาเพิ่มเติม..."> -->
          <div class="lesson-content py-4 px-3 bg-white w-100 my-4 layoutDetected" data-id="<%= Layout._id %>" data-type="Layout1s">
            <div class="px-3">
              <p class="text-areas-indent my-2  pb-2 fs-5 w-100 px-4 border-bottom border-light-subtle"><%= Layout.SubDescription%></p>
            </div>
            <% const AboutImage = Layout.AboutImage %>
            <% AboutImage.forEach ( Img => { %>
            <input type="text" class="d-none" value="<%=Layout._id%>">
            <div class="layout01_gird my-3">
              <div class="AboutImage h-auto">
                <div class="w-100">
                  <p class="Topic1 bg-primary p-3 h-auto my-0 mx-auto text-center"><%= Img.title %></p>
                </div>
                <div class="w-100 text-center">
                  <% const file = Img.file %>
                  <% if (Img.contentType.startsWith("image/")) { %>
                  <img class="ImageFile w-75 h-75 my-4 shadow rounded" src="<%=Img.file%>" alt="รูปภาพประกอบการเรียน">
                  <% } else { %>
                  <video class="ImageFile w-75 h-75 object-fit-cover my-4" src="<%=Img.file%>" controls autoplay></video>
                  <% } %>
                </div>
              </div>
              <div class="h-100 content-2">
                <p class="fs-5 text-areas-indent main-content-long-text my-2 h-100 w-100 py-2 px-3" style="color: #212529 !important;"><%= Img.ImageDescription %></p>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else if (Layout.name === "Layout02") {%>
          <div class="lesson-content py-2 bg-white my-4 layoutDetected" data-id="<%= Layout._id %>" data-type="Layout2s">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="IandMain d-grid">
              <p class="layout01-mainDes mx-4 px-3"><%=Layout.Topic %></p>
              <!-- <input class="input-mainDes form-control mx-4 p-3 h-auto" name="Topic" value="<%=Layout.Topic %>"> -->
            </div>
            <div class="setMargin py-2 px-4 bg-white w-100">
              <div class="Layout2Contents w-100">
                <div class="changeLayout02">
                  <div class="Layout2ContentsDiv p-1">
                    <div class="subLayout2Contents bg-white border-top border-primary border-2 rounded">
                      <div class="w-100 h-auto p-2">
                        <p class="fs-5"><%=Layout.TextArea1%></p>
                      </div>
                      <!-- <textarea name="TextArea1" class="textAreaLayout2 w-100 h-100 bg-white" disabled></textarea> -->
                    </div>
                    <div class="subLayout2Contents bg-white border-top border-primary border-2 rounded">
                      <div class="w-100 h-auto p-2">
                        <p class="fs-5"><%=Layout.TextArea2%></p>
                      </div>
                    </div>
                  </div>
                  <div class="subLayout2Contents2 bg-white border-top border-primary border-2 rounded">
                    <div class="w-100 h-auto p-2">
                      <p class="fs-5"><%=Layout.TextArea3%></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } else if (Layout.name === "Layout03") {%>
          <div class="lesson-content py-2 bg-white my-4 layoutDetected" data-id="<%= Layout._id %>" data-type="Layout3s">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="IandMain d-grid">
              <p class="layout01-mainDes mx-4 px-1 py-3 h-auto"><%=Layout.Description%></p>
            </div>
            <div class="setMargin py-2 px-4 bg-white w-100">
              <div class="Layout2Contents w-100 p-3 d-flex justify-content-center">
                <% if (Layout.contentType == "image/png") { %>
                <img class="ImageFile h-auto w-100 mx-auto my-2 shadow rounded" style="max-height: 750px;" src="<%=Layout.file%>" alt="รูปภาพประกอบการเรียน">
                <% } else if (Layout.contentType == "video/mp4") {%>
                <video class="w-100 h-auto object-fit-cover" src="<%=Layout.file%>" controls autoplay></video>
                <% } %>
              </div>
            </div>
          </div>
          <% } else if (Layout.name === "Layout04") {%>
          <div class="lesson-content py-2 bg-white my-4 layoutDetected" data-id="<%= Layout._id %>" data-type="Layout4s">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="IandMain" style="width: 100% !important;">
              <p class="mx-4 px-1 mb-3 mt-2 fs-2 fw-bold border-bottom border-light-subtle" style="margin-bottom:0em !important;"><%= Layout.Topic%></p>
            </div>
            <div class="mt-2">
              <p class="mx-4 w-100 h-auto bg-white px-1 fs-5"><%= Layout.Description%></p>
            </div>
            <div class="mt-1">
              <% const List = Layout.Lists %>
              <% List.forEach((list, index) => { %>
              <p class="mx-4 px-1 py-1 w-75 lh-lg"><%= list.list %></p>
              <% }); %>
            </div>

          </div>
          <% } else if (Layout.name === "Layout05") { %>
          <div class="lesson-content py-2 bg-white my-4 layoutDetected" data-id="<%= Layout._id %>" data-type="Layout5s">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div>
              <p class="mx-4 p-3 fs-2"><%= Layout.name %></p>
              <div>
                <!-- <embed src="/pdfs/example.pdf" type="application/pdf" width="100%" height="600px" /> -->
                <a href="/adminIndex/showFile?fileId=<%=Layout._id%>" target="_blank">โชว์ pdf</a>
              </div>
              <!-- <div>
                  <a href="/adminIndex/pdfDowload?id=<%= Layout._id %>">ดาวน์โหลด PDF</a>
                  <a href="/adminIndex/showPdf?pdfId=<%= Layout._id %>">แสดงผล PDF</a>
                </div> -->
            </div>
          </div>
          <% } else if (Layout.name === "pdfFiles") { %>
          <div class="lesson-content py-2 bg-white my-4 layoutDetected" data-id="<%= Layout._id %>" data-type="pdfFile">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <iframe class="pdf-iframe" src="<%=Layout.file%>" frameborder="0"></iframe>
          </div>
          <% } else if (Layout.name === "TextEditor") {%>
          <!-- <div class="layout" style="display: none;"></div> -->

          <div class="rounded shadow-sm bg-white my-4 py-2 layoutDetected" data-id="<%= Layout._id %>" data-type="TextEditor">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="px-3">
              <%-Layout.body%>
            </div>
          </div>
          <% } %>
          <% }); %>
          <% } else {%>
          <div class="lesson-content bg-white w-100 py-3 my-4">
            <p class="px-3">ยังไม่มีเนื้อหาภายในบทเรียนนี้
            </p>
          </div>
          <% }; %>
        </div>
        <div class="row mt-4">
          <div class="col-12 d-flex justify-content-center">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link px-2" href="/studentIndex/eachLessonStudent?lessonId=<%= lesson._id %>&page=<%= currentPage - 1 %>">ก่อนหน้า</a>
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link px-2" href="#">Previous</a>
                </li>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                <li class="page-item active">
                  <a class="page-link px-2" href="#"><%= i %></a>
                </li>
                <% } else { %>
                <li class="page-item">
                  <a class="page-link px-2" href="/studentIndex/eachLessonStudent?lessonId=<%= lesson._id %>&page=<%= i %>"><%= i %></a>
                </li>
                <% } %>
                <% } %>

                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link px-2" href="/studentIndex/eachLessonStudent?lessonId=<%= lesson._id %>&page=<%= currentPage + 1 %>">ถัดไป</a>
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link px-2" href="#">Next</a>
                </li>
                <% } %>
              </ul>
            </nav>
          </div>
        </div>
        <% if (studentAnswer != null) {%>
        <div class="lesson-content bg-white w-100 p-4 my-4 addQuestion">
          <div class="row d-flex align-items-center">
            <div class="col">
              <p class="fw-bold fs-5 my-1 mx-2" style="border-left: 0.25em solid #387bef; padding-left: 0.75em !important;">คำถามท้ายบท
                <i class="bi bi-question-circle mx-2 text-primary"></i>
              </p>
            </div>
            <div class="col d-flex justify-content-end">
              <a href="#" class="text-primary" id="cancelEditQuestionLink">ยกเลิก</a>
            </div>
          </div>

          <form action="/studentEditAnswerEndChapter" method="post">
            <input type="text" class="d-none" name="lessonId" value="<%=lesson._id%>">
            <input type="text" class="d-none" name="studentAnswerId" value="<%=studentAnswer._id%>">
            <div class="m-2">
              <ol class="list-group list-group-numbered">
                <% studentAnswer.Questions.forEach((question, index) => {%>
                <li class="list-group-item border border-0"><%=lessonQuestions.Questions[index].questionText%></li>
                <textarea class="editAnswer form-control my-1 p-2 question<%=question.questionNo%>" name="question<%=question.questionNo%>" rows="1"><%=question.questionText%></textarea>
                <p class="pb-2"><span class="text-primary">คำตอบ: </span><%=question.questionText%></p>
                <% }) %>
              </ol>
            </div>
            <div class="col d-flex justify-content-end">
              <a href="#" class="btn answer-button btn-warning p-2" id="editQuestionLink">แก้ไข</a>
              <button type="submit" class="btn answer-button btn-success p-2" id="sendEditQuestionLink">ส่งคำตอบ</button>
            </div>
          </form>
        </div>

        <% } else if (studentAnswer == null) {%>
        <% if (lessonQuestions != null) { %>
        <div class="lesson-content bg-white w-100 p-4 my-4 addQuestion">
          <div class="row d-flex align-items-center">
            <div class="col">
              <p class="fw-bold fs-5 my-1 mx-2" style="border-left: 0.25em solid #387bef; padding-left: 0.75em !important;">คำถามท้ายบท
                <i class="bi bi-question-circle mx-2 text-primary"></i>
              </p>
            </div>
            <div class="col d-flex justify-content-end">
              <a href="#" class="text-primary" id="cancelQuestionLink">ยกเลิก</a>
            </div>
          </div>

          <form action="/studentAnswerEndChapterQuestions" method="post">
            <input type="text" class="d-none" name="lessonId" value="<%=lesson._id%>">
            <input type="text" class="d-none" name="lessonQuestionId" value="<%=lessonQuestions._id%>">
            <div class="m-2">
              <ol class="list-group list-group-numbered">
                <% lessonQuestions.Questions.forEach(question => {%>
                <li class="list-group-item border border-0"><%=question.questionText%></li>
                <textarea class="studentAnswer form-control my-1 p-2 question<%=question.questionNo%>" name="question<%=question.questionNo%>" rows="1"></textarea>
                <% }) %>
              </ol>
            </div>
            <div class="col d-flex justify-content-end">
              <a href="#" class="btn answer-button btn-primary p-2" id="answerQuestionLink">ตอบ</a>
              <button type="submit" class="btn answer-button btn-success p-2" id="sendQuestionLink">ส่งคำตอบ</button>
            </div>
          </form>
        </div>
