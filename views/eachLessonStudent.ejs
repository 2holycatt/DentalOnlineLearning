      // ฟังก์ชันคำนวณเวลาที่ใช้เมื่อผู้ใช้ออกจากหน้าเว็บ
      function calculateTimeSpent() {
        const endTime = performance.now(); // เก็บเวลาที่ผู้ใช้กำลังจะออกจากหน้าเว็บ
        const timeDiff = (endTime - startTime) / 1000; // คำนวณเป็นวินาที
        timeSpent += timeDiff; // เพิ่มเวลาที่ใช้ไปกับเวลาที่เคยบันทึกไว้
        console.log(`Time spent on this page: ${timeDiff.toFixed(2)} seconds (Total: ${timeSpent.toFixed(2)} seconds)`);
      }

      let completedLayouts = new Set(); // ใช้ Set เพื่อหลีกเลี่ยงการส่งซ้ำ

      // ประกาศ throttledUpdateCompletedLayout ก่อนการใช้งาน
      const throttledUpdateCompletedLayout = _.throttle(function(layoutId, layoutType, lessonId, subjectId) {
        // console.log(completedLayouts);
