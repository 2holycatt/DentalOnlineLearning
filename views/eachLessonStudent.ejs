            console.log('Success:', data);
          })
          .catch((error) => {
            console.error('Error:', error);
          });

      }, 2000); // ปรับเวลาให้ throttled ที่ 1 วินาที

      // ฟังก์ชันเช็คว่า layout อยู่ใน viewport หรือไม่
      function isInViewport(element) {
        const rect = element.getBoundingClientRect();
        console.log('Element rect:', rect);
        console.log('Viewport:', {
          top: window.scrollY,
          left: window.scrollX,
          bottom: window.innerHeight,
          right: window.innerWidth
        });
        return (
          rect.top >= 0 &&
          rect.left >= 0 &&
          rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
          rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
      }

      // ฟังค์ชัน scroll event
      window.addEventListener('scroll', () => {
        console.log('Scroll event triggered'); // ตรวจสอบการเรียก scroll event
        const layouts = document.querySelectorAll('.layoutDetected');

        layouts.forEach(layout => {
          if (isInViewport(layout)) {
            const layoutId = layout.getAttribute('data-id'); // ดึงค่า _id
            const layoutType = layout.getAttribute('data-type'); // ดึงค่า layout type
            const lessonId = '<%= lesson._id %>'; // เพิ่ม lessonId ที่เกี่ยวข้อง
