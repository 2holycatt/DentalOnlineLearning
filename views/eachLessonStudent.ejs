    }

    .subLayout2Contents2 div {
      height: fit-content !important;
    }

    .setborder {
      border-radius: 0.5em !important;
    }

    .addContent-a {
      text-decoration: none !important;
      transition-duration: 0.3s;
    }

    .addContent-a:hover {
      color: #0d57d6 !important;
      transition: 0.3s;
    }

    .lesson-bar {
      border-left: 0.25em solid #387bef !important;
      padding-left: 0.5em !important;
    }

    .comment-table tr th {
      padding-top: 1em !important;
      padding-bottom: 1em !important;
      border-bottom: 1px solid #ced4daa0;
      color: #5a6a85 !important;

    }

    .comment-table tr td {
      padding-top: 1em !important;
      /* padding-bottom: 1em !important; */
      /* border-bottom: 1px solid #ced4daa0; */

    }

    .comment {
      display: flex;
      align-items: center;
      padding: 15px;
      max-height: 104px;
    }

    .comment img {
      width: 50px;
      height: 50px;
      border-radius: 25%;
      margin-right: 1em !important;
      object-fit: cover;

    }

    /* .comment .content {
      flex-grow: 1;
    } */

    .comment-color {
      color: #7C8FAC !important;
    }

    .fancyBox {
      width: 10%;
      height: auto;
    }

    .comment-files {
      width: 125px;
      height: 125px;
      margin-right: 1em !important;
      border-radius: 10%;
    }

    .commentOption {
      position: absolute;

    }

    .optionComment:hover {
      color: #003ba1 !important;
      transition: 0.3s;
    }

    /* .reply-comment {
      display: none;
    } */

    .pdf-iframe {
      width: 100%;
      height: calc(100vh - 50px);
      /* Adjust height based on toolbar */
      border: none;
    }

    @keyframes fadeInScale {

      /* กำหนด animation ใหม่ */
      0% {
        opacity: 0;
        transform: translate(-50%, -40%) scale(0.7);
        /* เริ่มด้วยขนาดเล็กและต่ำกว่ากึ่งกลาง */
      }

      100% {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
        /* ขยายเต็มขนาดและอยู่กึ่งกลาง */
      }
    }

    .editCommentForm {
      position: fixed;
      /* แก้ไขจาก absolute เป็น fixed */
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 1000;
      /* z-index สูงเพื่ออยู่ด้านบน */
      display: none;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.205);
      animation: fadeInScale 0.5s ease forwards;
      /* เพิ่ม animation */
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.13);
      /* ทำให้พื้นหลังมืด */
      z-index: 999;
      display: none;

      /* ซ่อน overlay เมื่อ popup ยังไม่เปิด */
    }

