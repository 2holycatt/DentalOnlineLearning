      let startTime; // เก็บเวลาที่เริ่มต้นเข้าใช้งานหน้าเว็บ
      let timeSpent = 0; // เก็บเวลาที่ใช้ไป

      // เมื่อเริ่มโหลดหน้าเว็บ (หน้า lesson)
      window.addEventListener('load', () => {
        startTime = performance.now(); // เก็บเวลาเริ่มต้น
