  <div class="main-content d-flex">
    <%- include("./partials/lessonsList.ejs")%>
    <!-- <div style="width: 20%;"><p class="w-100">&nbsp;</p></div> -->
    <div class="aside-right bg-white h-auto p-4" style="width: 80%;">
      <div class="manange-bar px-4 py-3 bg-white d-flex w-100">
        <p class="fw-bold fs-3 lesson-bar">จัดการรายวิชา</p>
        <div>
          <a href="/adminIndex/editSubject?subjectId=<%=subject._id%>" class="btn btn-warning m-0 p-2">
            แก้ไขรายวิชา<i class="bi bi-pencil-fill mx-2"></i>
          </a>
          <a href="/adminIndex/deleteSubject?subjectId=<%=subject._id%>" class="btn btn-danger m-0 p-2">
            ลบรายวิชา <i class="bi bi-dash-circle mx-2"></i>
          </a>
        </div>
      </div>
      <!-- <div class="lesson-content p-4 bg-white w-100 my-4">
        <p class="lesson-nothing text-center">ยังไม่มีข้อมูลจากบทเรียน
          <br>โปรดเลือกบทเรียนที่มีอยู่ในรายชื่อหากต้องดูข้อมูลและจัดการ
        </p>
      </div> -->

      <div class="lesson-content p-4 bg-white w-100 my-4">
        <div class="row">
          <div class="set-border-bottom col-12 d-flex align-items-center">
            <p class="fw-bold fs-5 my-1">
              วิชา:
              <span class="text-primary fw-normal">
                <%=subject.subjectId%> <%=subject.subjectName%>
              </span>
              <span class="">
                ภาคการศึกษา:
              </span>
              <span class="text-primary fw-normal">
                <%=subject.semester%>
              </span>
              <span class="">
                กลุ่มที่:
              </span>
              <span class="text-primary fw-normal">
                <%=subject.section%>
              </span>
            </p>
            <div class="flex-grow-1 d-flex justify-content-end">
              <a class="float-end px-1 btn btn-primary" href="/adminIndex/adminDashboard?subjectId=<%=subject._id%>">
                แดชบอร์ด <i class="mx-1 bi bi-pie-chart-fill"></i>
              </a>
            </div>
          </div>
          <div class="col-12 mt-2 row">
            <div class="col">
              <p class="fw-bold fs-6 my-1">
                <i class="bi bi-book-half text-primary me-1"></i>
                บทเรียนในรายวิชา
                <span class="text-secondary fw-normal">
                  /
                </span>
                จำนวน:
                <span class="text-primary fw-normal">
                  <%=subject.lessonArray.length%>
                </span>
              </p>
            </div>
            <div class="col d-flex align-items-center justify-content-end">
              <div class="custom-dropdown" id="custom-dropdown-1">
                <a href="" class="icon-toggle" id="icon-toggle">
                  <i class="fs-5 bi bi-three-dots-vertical text-primary icon-gear"></i>
                </a>
                <ul class="custom-dropdown-menu" id="custom-dropdown-menu">
                  <li><a class="custom-dropdown-item" href="/adminIndex/addLesson?subjectDbId=<%=subject._id%>&subjectName=<%=subject.subjectName%>&subjectSection=<%=subject.section%>&subjectId=<%=subject.subjectId%>&subjectSemester=<%=subject.semester%>">เพิ่มบทเรียน</a></li>
                  <li><a class="custom-dropdown-item" href="/adminIndex/copyLessons?subjectId=<%=subject._id%>">เพิ่มบทเรียนด้วยการคัดลอก</a></li>
                  <!-- <li><a class="custom-dropdown-item" href="/exportLogs?value=plain">ลบบทเรียน</a></li> -->
                </ul>
              </div>
            </div>
          </div>
          <div class="set-border-bottom col-12 mt-3 row">
            <% if (subject.lessonArray.length > 0) {%>
            <% const lessons = subject.lessonArray %>
            <% lessons.forEach(lesson => { %>
            <% if (lesson.file) { %>
            <div class="col-4">
              <a href="/adminIndex/eachLessons?lessonId=<%= lesson._id %>">
                <div class="card-1 text-bg-white mb-3" style="max-width: 15.125em; max-height: 8.8125em ; position: relative;">
                  <div class="card-header bg-white px-2 py-1 fw-bold text-primary" style="width: fit-content; border-bottom-right-radius:0.5em; position: absolute;">
                    <p class="text-break" style="font-size: small;"><%= lesson.LessonName %></p>
                  </div>
                  <div class="card-body-1">
                    <%const image = lesson.file%>
                    <img src="<%=image%>" alt="รูปภาพประกอบบทเรียน" class="card-img" alt="รูปของบทเรียน" style="width: 100%; height: 20%; max-width: 15.125em; max-height: 8.8125em; border-radius: 0.5em;">
                    <!-- /* <img src="/images/indexMed/DENTISTRY_KKU.svg.png" class="card-img" alt="รูปของบทเรียน" style="height: 100%; width: 50%; object-fit: cover;"> */ -->
                  </div>
                </div>
              </a>
            </div>
            <% } else if (!lesson.file) { %>
            <div class="col-4">
              <a href="/adminIndex/eachLessons?lessonId=<%= lesson._id %>">
                <div class="card-1 text-bg-white mb-4" style="max-width: 15.125em; max-height: 8.8125em ; position: relative;">
                  <div class="card-header bg-white px-2 py-1 fw-bold text-primary" style="width: fit-content; border-bottom-right-radius: 0.5em; position: absolute; ">
                    <p class="text-break" style="font-size: small;"><%= lesson.LessonName %></p>
                  </div>
                  <div class="card-body-1 d-flex justify-content-center p-4">
                    <img src="/images/indexMed/DENTISTRY_KKU.svg.png" class="card-img" alt="รูปของบทเรียน" style="height: 100%; width: 50%; object-fit: cover; max-width: 15.125em; max-height: 8.8125em ;">
                  </div>
                </div>
              </a>
            </div>
            <% } %>
            <% }); %>
            <% } else if (subject.lessonArray.length < 1) {%>
            <p class="showSubject show<%=subject.subjectId%> mb-2">ยังไม่มีบทเรียนในรายวิชานี้</span>
            </p>
            <% } %>
          </div>
          <div class="set-border-bottom col-12 mt-2 row">
            <div class="col">
              <p class="fw-bold fs-6 my-1">
                <i class="bi bi-people-fill text-primary me-1"></i></i>
                นักศึกษาที่ลงทะเบียนเรียน
                <span class="text-secondary fw-normal">
                  /
                </span>
                จำนวน:
                <span class="text-primary fw-normal">
                  <%=subject.students.length%>
                </span>
              </p>
            </div>
            <div class="col d-flex align-items-center justify-content-end">
              <div class="custom-dropdown" id="custom-dropdown-2">
                <a href="" class="icon-toggle" id="icon-toggle-2">
                  <i class="fs-5 bi bi-three-dots-vertical text-primary icon-gear"></i>
                </a>
                <ul class="custom-dropdown-menu" id="custom-dropdown-menu-2">
                  <li><a class="custom-dropdown-item" href="/adminIndex/addStudentToSubject?subjectDbId=<%=subject._id%>">เพิ่มนักศึกษาลงในรายวิชา</a></li>
                  <li><a class="custom-dropdown-item" href="/adminIndex/deleteStudentFromSubjectPage?subjectDbId=<%=subject._id%>">ลบนักศึกษาออกจากรายวิชา</a></li>
                  <!-- <li><a class="custom-dropdown-item" href="/exportLogs?value=plain">ลบบทเรียน</a></li> -->
                </ul>
              </div>
            </div>
          </div>
          <div class="col-12 row">
            <% if (subject.students.length > 0) {%>
            <div class="file-example w-100">
              <div class="list-div text-primary row">
                <p class="fw-bold my-3 col-1">
                  เลขที่
                </p>
                <p class="fw-bold my-3 col-2">
                  รหัสนักศึกษา
                </p>
                <p class="fw-bold my-3 col-3">
                  ชื่อ - นามสกุล
                </p>
                <p class="fw-bold my-3 col-2">
                  ชื่อเล่น
                </p>
                <p class="fw-bold my-3 col-3">
                  ที่อยู่อีเมล (email)
                </p>
                <p class="fw-bold my-3 col-1">
                  คณะ
                </p>
              </div>
              <% const students = subject.students %>
              <% students.forEach((student, index) => { %>
              <div class="list-div-data row">
                <p class="fw-normal my-3 col-1">
                  <%=index + 1%>
                </p>
                <p class="fw-normal my-3 col-2">
                  <%=student.studentId%>
                </p>
                <p class="fw-normal my-3 col-3">
                  <%=student.user.name%>
                </p>
                <p class="fw-normal my-3 col-2">
                  <% if (student.user.nickname != null) { %>
                    <%=student.user.nickname%>
                  <% } else { %>
                      -
                  <% } %>
                </p>
                <p class="fw-normal my-3 col-3">
                  <%=student.user.email%>
                </p>
                <p class="fw-normal my-3 col-1">
                  <%=student.user.major%>
                </p>
              </div>
              <% }); %>

            </div>
            <% } else if (subject.students.length < 1) {%>
            <p class="showSubject show<%=subject.subjectId%> mt-3">ยังไม่มีนักศึกษาอยู่ในรายวิชานี้</span>
            </p>
            <% } %>
          </div>
        </div>
      </div>

    </div>
  </div>
  <%- include("./partials/footer.ejs")%>
