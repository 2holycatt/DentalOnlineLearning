  <div class="main-content d-flex w-100 h-auto">
    <%- include("./partials/lessonsList.ejs")%>
    <div class="row allCOntent" style="width: 80% !important;">
      <div class="col-12 aside-right px-4 py-4 bg-white" style="width: 100% !important;">
        <div class="manange-bar px-4 py-3 bg-white w-100">
          <div class="d-row" style="border-bottom: 1px solid #ced4daa0; padding-bottom: 0.5em !important;">
            <div class="d-flex col-12" style="align-items: center; grid-template-columns: 0.5fr 1.5fr;">
              <p class="fw-normal w-auto fs-6 lesson-bar">บทเรียน:
                <span class="fw-normal fs-6 text-primary" style="margin-right: 1em !important;"><%=lesson.LessonName%></span>
                วิชา:
                <span class="fw-normal fs-6 text-primary"><%=subject.subjectId%> <%=subject.subjectName%></span>
                ภาคการศึกษา:
                <span class="fw-normal fs-6 text-primary"><%=subject.semester%></span>
                กลุ่มที่:
                <span class="fw-normal fs-6 text-primary"><%=subject.section%></span>
              </p>
              <div class="d-flex justify-content-end w-auto">
                <a href="/adminIndex/editLesson?lessonId=<%=lesson._id%>&subjectId=<%=subject._id%>" class="edit-a text-dark px-2" style="border-left: 1px solid #ced4daa0 ;margin:0em 1em !important; font-size: small;">แก้ไขชื่อและรูปปก<i class="bi bi-pencil mx-2"></i>
                </a>
              </div>
            </div>
          </div>

          <% const questions = lesson.lessonQuestion %>
          <div class="d-flex">
            <div class="d-flex w-50">
              <a href="/adminIndex/getMoreAddContent?lesson=<%=lesson._id%>" class="add-button btn btn-primary my-2 p-2">
                เพิ่มเนื้อหา<i class="bi bi-plus-circle-fill mx-2"></i>
              </a>
              <a href="/adminIndex/editLessonContent?lesson=<%=lesson._id%>" class="btn add-button btn-warning my-2 p-2 mx-2" style="height: fit-content !important;">
                แก้ไขเนื้อหาภายในบทเรียน<i class="bi bi-pencil-square mx-2"></i>
              </a>
              <% if (questions) {%>
              <button class="btn add-button btn-info my-2 p-2" style="height: fit-content !important;" disabled>
                เพิ่มคำถามท้ายบท<i class="bi bi-question-circle mx-2"></i>
              </button>
              <% } else { %>
              <a href="/adminIndex/addEndChapterQuestion?lesson=<%=lesson._id%>" class="btn add-button btn-info my-2 p-2" style="height: fit-content !important;">
                เพิ่มคำถามท้ายบท<i class="bi bi-question-circle mx-2"></i>
              </a>
              <% } %>

            </div>
            <div class="d-flex w-50 justify-content-end">
              <a href="/adminIndex/deleteLesson?lessonId=<%=lesson._id%>&subjectId=<%=subject._id%>" class="btn add-button btn-danger my-2 p-2 mx-2" style="height: fit-content !important;">
                ลบบทเรียน: <span class="text-light"><%=lesson.LessonName%></span><i class="bi bi-eraser-fill mx-2"></i>
              </a>
            </div>
          </div>

        </div>
        <div class="hide-layout-2">
          <% if (paginatedLayouts.length > 0) { %>
          <% paginatedLayouts.forEach(Layout => {%>
          <% if (Layout.name === "Layout01") {%>
          <div class="layout" data-id="<%= Layout._id %>" data-type="Layout1s" style="display: none;"></div>
          <p class="layout01-mainDes mx-3 my-3"><%= Layout.Topic%></p>
          <p class="text-areas-indent mx-3 fs-5" style="width: 90%;"><%= Layout.MainDescription%></p>
          <!-- <input class="input-mainSubDes form-control mx-5 p-3 w-75 h-auto" name="LessonNumber" placeholder="กรอกข้อความส่วนอธิบายเนื้อหาเพิ่มเติม..."> -->
          <div class="lesson-content py-4 px-3 bg-white w-100 my-4">
            <div class="px-3">
              <p class="text-areas-indent my-2  pb-2 fs-5 w-100 px-4 border-bottom border-light-subtle"><%= Layout.SubDescription%></p>
            </div>
            <% const AboutImage = Layout.AboutImage %>
            <% AboutImage.forEach ( Img => { %>
            <input type="text" class="d-none" value="<%=Layout._id%>">
            <div class="layout01_gird my-3">
              <div class="AboutImage h-auto">
                <div class="w-100">
                  <p class="Topic1 bg-primary p-3 h-auto my-0 mx-auto text-center"><%= Img.title %></p>
                </div>
                <div class="w-100 text-center">
                  <% const file = Img.file %>
                  <% if (Img.contentType.startsWith("image/")) { %>
                  <img class="ImageFile w-75 h-75 my-4 shadow rounded" src="<%=Img.file%>" alt="รูปภาพประกอบการเรียน">
                  <% } else { %>
                  <video class="ImageFile w-75 h-75 object-fit-cover my-4" src="<%=Img.file%>" controls autoplay></video>
                  <% } %>
                </div>
              </div>
              <div class="h-100 content-2" style="overflow: auto;">
                <p class="fs-5 text-areas-indent my-2 h-100 w-100 px-3" 
                   style="word-break: break-word;">
                <%= Img.ImageDescription %>
                </p>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else if (Layout.name === "Layout02") {%>
          <div class="layout" data-id="<%= Layout._id %>" data-type="Layout2s" style="display: none;"></div>
          <div class="lesson-content py-2 bg-white my-4">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="IandMain d-grid">
              <p class="layout01-mainDes mx-4 px-3"><%=Layout.Topic %></p>
              <!-- <input class="input-mainDes form-control mx-4 p-3 h-auto" name="Topic" value="<%=Layout.Topic %>"> -->
            </div>
            <div class="setMargin py-2 px-4 bg-white w-100">
              <div class="Layout2Contents w-100">
                <div class="changeLayout02">
                  <div class="Layout2ContentsDiv p-1">
                    <div class="subLayout2Contents bg-white border-top border-primary border-2 rounded">
                      <div class="w-100 h-auto p-2">
                        <p class="fs-5"><%=Layout.TextArea1%></p>
                      </div>
                      <!-- <textarea name="TextArea1" class="textAreaLayout2 w-100 h-100 bg-white" disabled></textarea> -->
                    </div>
                    <div class="subLayout2Contents bg-white border-top border-primary border-2 rounded">
                      <div class="w-100 h-auto p-2">
                        <p class="fs-5"><%=Layout.TextArea2%></p>
                      </div>
                    </div>
                  </div>
                  <div class="subLayout2Contents2 bg-white border-top border-primary border-2 rounded">
                    <div class="w-100 h-auto p-2">
                      <p class="fs-5"><%=Layout.TextArea3%></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } else if (Layout.name === "Layout03") {%>
          <div class="layout" data-id="<%= Layout._id %>" data-type="Layout3s" style="display: none;"></div>

          <div class="lesson-content py-2 bg-white my-4">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="IandMain d-grid">
              <p class="layout01-mainDes mx-4 px-1 py-3 h-auto"><%=Layout.Description%></p>
            </div>
            <div class="setMargin py-2 px-4 bg-white w-100">
              <div class="Layout2Contents w-100 p-3 d-flex justify-content-center">
                <% if (Layout.contentType.startsWith("image/")) { %>
                <img class="ImageFile h-auto w-100 mx-auto my-2 shadow rounded" style="max-height: 750px;" src="<%=Layout.file%>" alt="รูปภาพประกอบการเรียน">
                <% } else if (Layout.contentType.startsWith("video/")) {%>
                <video class="w-100 h-auto object-fit-cover" src="<%=Layout.file%>" controls autoplay></video>
                <% } %>
              </div>
            </div>
          </div>
          <% } else if (Layout.name === "Layout04") {%>
          <div class="layout" data-id="<%= Layout._id %>" data-type="Layout4s" style="display: none;"></div>
          <div class="lesson-content py-2 bg-white my-4">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="IandMain" style="width: 100% !important;">
              <p class="mx-4 px-1 mb-3 mt-2 fs-2 fw-bold border-bottom border-light-subtle" style="margin-bottom:0em !important;"><%= Layout.Topic%></p>
            </div>
            <div class="mt-2">
              <p class="mx-4 w-100 h-auto bg-white px-1 fs-5"><%= Layout.Description%></p>
            </div>
            <div class="mt-1">
              <% const List = Layout.Lists %>
              <% List.forEach((list, index) => { %>
              <p class="mx-4 px-1 py-1 w-75 lh-lg"><%= list.list %></p>
              <% }); %>
            </div>

          </div>
          <% } else if (Layout.name === "Layout05") { %>
          <div class="lesson-content py-2 bg-white my-4">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div>
              <p class="mx-4 p-3 fs-2"><%= Layout.name %></p>
              <div>
                <!-- <embed src="/pdfs/example.pdf" type="application/pdf" width="100%" height="600px" /> -->
                <a href="/adminIndex/showFile?fileId=<%=Layout._id%>" target="_blank">โชว์ pdf</a>
              </div>
              <!-- <div>
                  <a href="/adminIndex/pdfDowload?id=<%= Layout._id %>">ดาวน์โหลด PDF</a>
                  <a href="/adminIndex/showPdf?pdfId=<%= Layout._id %>">แสดงผล PDF</a>
                </div> -->
            </div>
          </div>
          <% } else if (Layout.name === "pdfFiles") { %>
          <div class="layout" data-id="<%= Layout._id %>" data-type="pdfFile" style="display: none;"></div>
          <div class="lesson-content py-2 bg-white my-4">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <iframe class="pdf-iframe" src="<%=Layout.file%>" frameborder="0"></iframe>
          </div>
          <% } else if (Layout.name === "TextEditor") {%>
          <div class="layout" data-id="<%= Layout._id %>" data-type="TextEditor" style="display: none;"></div>

          <div class="rounded shadow-sm bg-white my-4 py-2">
            <input class="d-none" type="text" name="_id" value="<%= Layout._id %>">
            <div class="px-3">
              <%-Layout.body%>
            </div>
          </div>
          <% } %>
          <% }); %>
          <% } else {%>
          <div class="lesson-content bg-white w-100 py-3 my-4">
            <p class="px-3">บทเรียนยังไม่มีเนื้อหา เนื่องจากคุณยังไม่ได้เพิ่มเนื้อหาใด ๆ ให้แก่บทเรียนนี้
            </p>
            <a href="/adminIndex/getMoreAddContent?lesson=<%=lesson._id%>" class="px-3 addContent-a text-primary">
              เพิ่มเนื้อหา
              <i class="bi bi-plus-circle-fill"></i>
            </a>
          </div>
          <% }; %>
        </div>
        <div class="row mt-4">
          <div class="col-12 d-flex justify-content-center">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link px-2" href="/adminIndex/eachLessons?lessonId=<%= lesson._id %>&page=<%= currentPage - 1 %>">ก่อนหน้า</a>
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link px-2" href="#">ก่อนหน้า</a>
                </li>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                <% if (i === currentPage) { %>
                <li class="page-item active">
                  <a class="page-link px-2" href="#"><%= i %></a>
                </li>
                <% } else { %>
                <li class="page-item">
                  <a class="page-link px-2" href="/adminIndex/eachLessons?lessonId=<%= lesson._id %>&page=<%= i %>"><%= i %></a>
                </li>
                <% } %>
                <% } %>

                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link px-2" href="/adminIndex/eachLessons?lessonId=<%= lesson._id %>&page=<%= currentPage + 1 %>">ถัดไป</a>
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link px-2" href="#">ถัดไป</a>
                </li>
                <% } %>
              </ul>
            </nav>
          </div>
        </div>
        <!-- lessonQuestions -->
        <% if (questions) { %>
        <div class="lesson-content bg-white w-100 p-4 my-4 addQuestion">
          <div class="row d-flex align-items-center">
            <div class="col d-flex align-items-center">
              <p class="fw-bold fs-5 my-1 mx-2" style="border-left: 0.25em solid #387bef; padding-left: 0.75em !important;">คำถามท้ายบท
                <i class="bi bi-question-circle mx-2 text-primary"></i>
              </p>
              <p class="fw-bold fs-6">
              <span class="text-primary">คะแนนเต็ม</span>: <%=questions.maxScore%>
              </p>
            </div>
            <div class="col d-flex justify-content-end">
              <a href="#" class="text-primary me-2" id="editQuesitonLink">แก้ไขคำถามท้ายบท</a>
              <a href="/adminIndex/studentAnswerLists?questionId=<%=questions._id%>" class="text-success">คำตอบจากนักศึกษา</a>

            </div>
          </div>
          <div class="m-2">
            <ol class="list-group list-group-numbered">
              <% questions.Questions.forEach(question => {%>
              <li class="list-group-item border border-0"><%=question.questionText%></li>
              <% }) %>
            </ol>
          </div>
        </div>
        
