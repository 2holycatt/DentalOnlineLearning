  <script>
    document.addEventListener('DOMContentLoaded', function() {
  
      const dropArea = document.querySelector(".drop_box"),
        button = dropArea.querySelector(".choose-btn"),
        dragText = dropArea.querySelector("header"),
        input = dropArea.querySelector(".input-file");
      let file;
      var filename;

      button.onclick = () => {
        input.click();
      };

      input.addEventListener("change", function(e) {
        var fileName = e.target.files[0].name;
        var headerText = document.querySelector('.drop_box header h4');
        var descText = document.querySelector('.desText');

        // เปลี่ยนข้อความใน element เป็นชื่อไฟล์ที่ถูกเลือก
        headerText.textContent = fileName;
        descText.textContent = 'ไฟล์ถูกอัปโหลดแล้ว';
        // let filedata = `
        // <h4 class="my-2">${fileName}</h4>
        //;
        // dropArea.innerHTML = filedata;
        var uploadButton = document.createElement('div');
        uploadButton.classList.add('d-flex', 'justify-content-center', 'my-1');
        uploadButton.innerHTML = `
        <button class="btn-focus">อัปโหลด</button>
        `;
        dropArea.appendChild(uploadButton);

        // ซ่อนปุ่ม "เลือกไฟล์"
        var chooseButton = document.querySelector('.choose-btn');
        chooseButton.style.display = 'none';
      });

      var errorMessage = document.getElementById('error-message').textContent || "error";
      if (errorMessage) {
        Swal.fire({
          icon: 'warning',
          title: 'ไม่สามารถเพิ่มรายวิชานี้ได้',
          text: errorMessage,
          customClass: {
            container: 'custom-container',
            popup: 'custom-popup',
            title: 'custom-title',
            icon: 'custom-icon',
            content: 'custom-content',
            confirmButton: 'custom-button'
          },
          timer: 3000
        });

      }

      
      
    document.getElementById('semester').addEventListener('input', function(e) {
      let value = e.target.value;

      // Regular Expression to match the format "d/d{0,4}" where d is a digit
      const regex = /^\d\/?\d{0,4}$/;

      if (!regex.test(value)) {
        // If the value doesn't match the regex, remove the last character
        e.target.value = value.slice(0, -1);
        return;
      }


      if (value.length === 2 && value[1] !== '/') {
        // Insert '/' at the second position
        e.target.value = value[0] + '/' + value[1];
      } else if (value.length > 2 && value[1] !== '/') {
        // Prevent replacing the character at the second position if it's not '/'
        e.target.value = value[0] + '/' + value.slice(2);
      }
    });
    });

  </script>



